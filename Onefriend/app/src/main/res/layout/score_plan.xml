<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggg"
    >

    <Button
        android:id="@+id/stress_display"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/cc"
        android:text="0"
        android:textColor="#17202A"
        android:textSize="80dp" />

    <Button
        android:id="@+id/stress_percentage"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/percentage"
        android:textColor="#17202A"
        android:text="0"
        android:paddingRight="140dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stress_last_score"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/last_score"
        android:paddingRight="130dp"
        android:text="0"
        android:textColor="#17202A"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stress_difference"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/difference"
        android:textColor="#17202A"
        android:text="0"
        android:paddingRight="130dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stress_average"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/average"
        android:paddingRight="130dp"
        android:text="0"
        android:textColor="#17202A"
        android:textSize="20dp" />

    <Button
        android:id="@+id/stress_program"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#F8C471"
        android:text="Program" />


</LinearLayout>