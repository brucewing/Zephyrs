<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:weightSum="12"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/ItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ItemImage"
        />


    <!--
        把按钮背景设置为透明:     android:background="#00000000"
        把按钮背景设置为半透明:     android:background="#e0000000"
        -->




    <TextView
        android:id="@+id/ItemWinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/ItemImage"
        android:layout_toLeftOf="@+id/ItemImage"
        android:layout_toRightOf="@+id/ItemWinName2"
        android:layout_weight="3"
        android:text="ItemWinName" />

    <TextView
        android:id="@+id/ItemWinName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="3"
        android:layout_toLeftOf="@+id/ItemWinName"
        android:layout_toRightOf="@+id/ItemWinName3"
        android:text="ItemWinName2" />

    <TextView
        android:id="@+id/ItemWinName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toLeftOf="@+id/ItemWinName2"
        android:layout_toRightOf="@+id/ItemCloseWin"
        android:layout_weight="3"
        android:text="ItemWinName3" />

    <ImageButton
        android:id="@+id/ItemCloseWin"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ItemWinName"
        android:layout_alignBottom="@+id/ItemWinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="ItemCloseWin"
        android:background="#e0000000"
        android:gravity="left|center_vertical"
        android:focusable="false"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        />
</LinearLayout>